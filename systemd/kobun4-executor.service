[Unit]
Description=Kobun4 Executor

[Service]
Restart=on-failure
StartLimitInterval=86400
StartLimitBurst=5

User=kobun4
Group=nogroup

WorkingDirectory=/var/lib/kobun4/executor
ExecStart=/opt/kobun4/executor/executor -k4_library_path=/opt/kobun4/clients -chroot_path=/opt/kobun4/chroot -logtostderr

PrivateTmp=true
PrivateDevices=false
ProtectSystem=full
ProtectHome=true
ReadWriteDirectories=/var/lib/kobun4/executor

[Install]
WantedBy=multi-user.target
